---
// Page Header Section
// ------------
// Description: The basic page header.

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'

// Content

// Props
type Props = {
	id?: string
	title?: string
	image?: any
	text?: string
	classes?: string
}
const { id = 'intro', title, image, text, classes } = Astro.props
---

<Section id={id} classes=`bg-neutral-50 dark:bg-neutral-900 ${classes}`>
	<Row>
		<Col span="12" align="center">
			<header class="page-header">
				<h1 class="page-header__title" set:html={title} />
				{image && (
					<img
						src={image}
						alt="Header image for Champion Maid Service, providing residential cleaning services across Buffalo and Western New York."
						class="w-1/3 max-w-md mx-auto h-auto align-top drop-shadow-[0_0px_50px_rgba(0,0,0,0.10)] my-4"
						draggable="false"
					/>
				)}
				<p class="page-header__text" set:html={text}/>
			</header>
		</Col>
	</Row>
</Section>

<style>
	.page-header {
		@apply mx-auto max-w-3xl;
	}
	.page-header__text {
		@apply text-lg leading-relaxed;
	}
</style>
