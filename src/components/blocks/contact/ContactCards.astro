---
// Basic Cards grid Section
// ------------
// Description: A grid of cards with basic contact information in a 4 column layout.
// Properties:
// - classes: Additional classes to be added to the Section

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
import Card from '../../ui/cards/BasicCard.astro'

// 	Props
type Props = {
	classes?: string
}
const { classes } = Astro.props
---

<Section id="requests" classes={classes}>
	<Row>
		<Col span="12" align="center" classes="mb-12 max-w-4xl mx-auto">
			<h2 class="text-balance">Have a Cleaning Request? We’re Here to <strong>Help!</strong></h2>
			<p class="pb-0 text-lg">
				Every home is unique, and so are your cleaning needs. Whether you’re looking for regular 
				housekeeping, a one-time refresh, or help with a special request, our team is 
				here to make your life easier. Take a look at some of the options below or reach out and 
				let us know what you have in mind.
			</p>
		</Col>
	</Row>
	<Row>
		<Col span="3">
			<Card
				title="House Cleaning"
				subtitle="Keep your home tidy and welcoming with cleanings that fit your schedule. Weekly, bi-weekly, monthly — we’ll handle the chores so you can relax."
				icon="house"
				classes="text-center dark:!bg-neutral-800/50"
				link="/contact"
			/>
		</Col>
		<Col span="3">
			<Card
				title="Deep Cleaning"
				subtitle="Ready for a fresh start? Our deep cleaning service takes care of the details, leaving every corner of your home sparkling clean."
				icon="soap"
				classes="text-center dark:!bg-neutral-800/50"
				link="/contact"
			/>
		</Col>
		<Col span="3">
			<Card
				title="Move In / Move Out"
				subtitle="Moving is stressful enough without the cleaning. We’ll make sure your old place is spotless or your new one is ready to feel like home."
				icon="open-box"
				classes="text-center dark:!bg-neutral-800/50"
				link="/contact"
			/>
		</Col>
		<Col span="3" classes="flex flex-col gap-6">
			<Card
				title="Special Requests"
				subtitle="Have something specific in mind? From organizing to tackling tough spots, we’re flexible and happy to meet your needs."
				icon="sparkles"
				classes="text-center dark:!bg-neutral-800/50"
				link="/contact"
			/>
		</Col>
	</Row>
</Section>
