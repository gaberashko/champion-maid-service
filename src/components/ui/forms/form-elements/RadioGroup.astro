---
// Radio Group
// ------------
// Description: The component for the basic radio group form input
// Properties:
// - id: The id of the radio group
// - label: The label of the radio group

// Reference: https://wind-ui.com/components/form-elements/radio-groups/

// Components
// - UI
import { Icon } from 'astro-icon/components'


// Props
type Props = {
	id: string
	label: string
    data: any
}

const { id, label, data } =
	Astro.props;

---

<fieldset class="flex flex-col md:flex-row gap-2 input justify-center">
  <legend class="mb-6 text-slate-500">{label}</legend>
    {
        data.map((radioOption: any, key: number) => (
            <div class="relative flex items-center">
                <input class="min-w-4 min-h-4 transition-colors bg-white border-2 rounded-full appearance-none cursor-pointer peer border-slate-500 checked:border-primary-500 checked:bg-primary-500 checked:hover:border-primary-600 checked:hover:bg-primary-600 focus:outline-none checked:focus:border-primary-700 checked:focus:bg-primary-700 focus-visible:outline-none disabled:cursor-not-allowed disabled:border-slate-100 disabled:bg-slate-50" type="radio" value={radioOption.name} id={radioOption.name} name={radioOption.group} />
                <label class="pl-2 cursor-pointer text-slate-500 peer-disabled:cursor-not-allowed peer-disabled:text-slate-400 input__label" for={radioOption.name}>
                {radioOption.name}
                </label>
                <svg class="input__icon" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg" aria-labelledby={`title-${key} description-${key}`} >
                    <title id={`title-${key}`}>Circle Shape</title>
                    <desc id={`description-${key}`}>
                        Circle shape to indicate whether the radio input is checked or
                        not.
                    </desc>
                    <circle cx="8" cy="8" r="4" />
                </svg>
            </div>
        ))
    }
</fieldset>


<style>
	.input {
		@apply relative w-full;
	}
	.input__field {
		@apply relative w-full px-4 text-neutral-500 placeholder-transparent outline-none -backdrop-hue-rotate-30 transition-all autofill:bg-white disabled:cursor-not-allowed disabled:bg-neutral-50 disabled:text-neutral-400 dark:border-neutral-800 dark:bg-neutral-900 dark:autofill:bg-neutral-800 dark:disabled:bg-neutral-600;
	}
	.input__label {
		@apply pl-2 text-sm md:text-base cursor-pointer text-slate-500 peer-disabled:cursor-not-allowed peer-disabled:text-slate-400;
	}
	.input__icon {
		@apply absolute left-0 w-4 h-4 transition-all duration-300 scale-50 opacity-0 pointer-events-none fill-white peer-checked:scale-100 peer-checked:opacity-100 peer-disabled:cursor-not-allowed;
	}
</style>
