---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Hero from '../components/blocks/hero/PageHeader.astro'
import FAQ from '../components/blocks/FAQ/FaqSticky.astro'
import TextImage from '../components/blocks/basic/TextImage.astro'

// Data
import faqData from '../data/json-files/faqData.json'
// - FAQ Categories
const faqPricing = faqData.filter((faq) => faq.category === 'pricing')
const faqGeneral = faqData.filter((faq) => faq.category === 'general')

// Content
import faqImage1 from '../assets/faq/faq-01.jpg'
// - SEO
const SEO = {
	title: 'Buffalo House Cleaning FAQ | Champion Maid Service',
	description:
		'Answers to common questions about house cleaning and residential cleaning in Buffalo NY. Learn about services, pricing, deep cleaning, maid services, and more from Champion Maid Service.'
}
// - Page Header
const header = {
	title: '<strong>House Cleaning FAQ</strong> in Buffalo NY',
	text: 'Your top questions about Champion Maid Service answered, from pricing and deep cleaning to maid services and scheduling.'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<FAQ
		title="Services Made Simple"
		text="Get clear answers about our Buffalo house cleaning, maid services, deep cleaning, and more. We make booking simple, reliable, and tailored to your needs."
		data={faqGeneral}
	/>
	<FAQ
		title="Understanding Our Cleaning Prices"
		text="We believe a clean space should be easy and affordable. At Champion Maid Service, we’re upfront about our prices, offer special discounts, and can tailor a cleaning plan just for you. Whether you need a one-time deep clean or regular upkeep, we’ll find the perfect fit for your home or business (and your budget)."
		data={faqPricing}
	/>
	<TextImage
		title="Why Champion Maid Service Is Worth It"
		text="A clean space is about more than appearances — it’s about comfort, focus, and peace of mind. Our services are built to bring lasting value at a fair price. From a quick refresh before guests arrive to a seasonal deep clean or ongoing maintenance, every visit is handled with care so your home or business always feels its best."
		image={faqImage1}
		mobileImage={faqImage1}
		imagePosition="left"
		offsetImage
		classes="bg-neutral-50 dark:bg-neutral-900"
	/>
</Layout>
