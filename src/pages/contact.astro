---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import FormHero from '../components/blocks/hero/ContactHero.astro'
import ContactCards from '../components/blocks/contact/ContactCards.astro'

// - SEO
const SEO = {
	title: 'Contact Champion Maid Service | Buffalo NY House Cleaning',
	description:
		'Get in touch with Champion Maid Service for house cleaning, maid services, and residential cleaning in Buffalo NY. Call or message today to schedule your cleaning!'
}
// - Page Header
const header = {
	title: 'Reach out <strong>Today</strong>!',
	text: "Whether you have a question, general inquiries about our services, or just want to share your feedback, we're all ears. Reach out to us and we'll get back to you as soon as possible."
}
---

<Layout title={SEO.title} description={SEO.description}>
	<FormHero
		title={header.title}
		text={header.text}
		id="contact"
		classes="bg-neutral-50 dark:bg-neutral-950/80"
	/>
	<ContactCards classes="dark:bg-neutral-950/80" />
</Layout>
